{
    "manifest_version": 3,
    "name": "Mon Extension Popup API",
    "version": "1.0",
    "description": "Envoie le contenu de la page et des données à une API locale",
    "permissions": [
        "activeTab",
        "storage",
        "scripting"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "host_permissions": [
        "https://*/*",
        "http://*/*",
        "file:///*"
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "libs/marked.min.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "libs/marked.min.js",
                "popup.js"
            ]
        }
    ]
}